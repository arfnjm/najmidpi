<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="10dp"

    tools:context=".MainActivity">
    <ImageView
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:layout_gravity="right"
        android:src="@drawable/dpi_logo"
        />

    <TextView
        android:id="@+id/main_tv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:text="سامانه سلامت هوشمند"
        android:textColor="#ECEFF0"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/main_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/background_edittext_home"
        android:gravity="center"
        android:hint="تلفن و یا ایمیل خود را وارد نمایید ."
        android:padding="10dp"
        android:textColor="#3F51B5"
        android:textColorHint="#3F51B5"
        android:maxLength="70"
        android:maxLines="1"
        />

    <Button
        android:id="@+id/main_btn_signin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_edittext"
        android:text="ورود"
        android:textColor="#E2DCDC"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/main_btn_signup"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="13dp"
        android:background="@drawable/background_edittext"
        android:text="ثبت نام"
        android:textColor="#E2DCDC"
        android:textSize="20dp"
        android:textStyle="bold"
        />


</LinearLayout>